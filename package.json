{
  "name": "aliucord",
  "version": "0.1.0",
  "license": "OSL-3.0",
  "publishConfig": {
    "directory": "lib",
    "typings": "index.d.ts"
  },
  "scripts": {
    "build": "rollup -c --configPlugin @rollup/plugin-typescript",
    "dev": "pnpm run deploy -w",
    "deploy": "pnpm run build && adb shell rm /sdcard/AliucordRN/Aliucord.js.bundle && adb push ./dist/Aliucord.js.bundle /sdcard/AliucordRN/ && adb shell am start -a android.intent.action.VIEW -d discord://app/connect/alicuord",
    "prepublishOnly": "rm lib -r && tsc && cp package.json lib && cp LICENSE lib && cp README.md lib",
    "lint": "eslint ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aliucord/Aliucord-RN.git"
  },
  "bugs": {
    "url": "https://github.com/Aliucord/Aliucord-RN/issues"
  },
  "homepage": "https://aliucord.com",
  "devDependencies": {
    "@aliucord/rollup-plugin": "0.1.0",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/node": "^17.0.24",
    "@types/react": "^17.0.39",
    "@types/react-native": "^0.67.4",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.13.0",
    "eslint-plugin-react": "^7.29.4",
    "hermes-engine": "0.11.0",
    "rollup": "^2.70.2",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@aliucord/react-devtools-core": "^4.24.4-aliucord.1",
    "@swc/helpers": "^0.3.9"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "tslib"
      ]
    }
  },
  "packageManager": "pnpm@7.0.0"
}
